<Window x:Class="Label_Sticker.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Work Items" Height="300" Width="400">
    <Grid>
        <TextBox x:Name="EditorTextBox" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                 AcceptsReturn="True" TextWrapping="Wrap" Margin="10"/>
        <Button Content="Save" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Click="SaveButton_Click"/>
    </Grid>
</Window>
